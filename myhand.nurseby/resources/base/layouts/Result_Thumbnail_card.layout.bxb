layout-macro-def(result-thumbnail-card) {
  params {
    param (disease) {
      type (Disease)
      min (Required) max (One)
    }
  }

  content {
    thumbnail-card {
      image-position (End)
      image-url ("[#{value(result.images[0].url)}]")
      title-area {
        halign (Start)
        slot1 {
          text {
            value ("#{value(result.name)}")
            style (Title_S)
          }
        }
        slot2 {
          single-line {
            text {
              value ("From #{value(result.lowRate)} â€¢ #{value(hotel.rating)} stars")
              style (Detail_L_Soft)
            }
          }
        }
      }
    }
    section {  // this macro returns a "section"
      content {
        paragraph {
          value ("#{value(__PARAM_NAME__)}")
          style (Detail_M)
        }
      }
    }
  }
}
